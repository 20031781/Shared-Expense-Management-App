{
  "expo": {
    "name": "Split Expenses",
    "slug": "split-expenses",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "updates": {
      "enabled": false
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.splitexpenses.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Split Expenses to access your camera to take photos of receipts",
        "NSPhotoLibraryUsageDescription": "Allow Split Expenses to access your photos to upload receipts"
      }
    },
    "android": {
      "package": "com.splitexpenses.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.NOTIFICATIONS"
      ]
    },
    "plugins": [
      "expo-secure-store"
    ],
    "scheme": "splitexpenses",
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
